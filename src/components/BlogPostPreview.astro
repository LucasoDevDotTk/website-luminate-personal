---
export interface Props {
	post: any;
}

const { post } = Astro.props;

let allCategories = post.frontmatter.categories;

if (allCategories == undefined) {
	allCategories = []
}

// console.log("Test")

---

<article class="my-5 bg-[#FFFFFF]/40 p-5 rounded-xl">
	<header>
		<p class="text-sm my-1">{post.frontmatter.publishDate}</p>

		<div class="flex my-2 text-sm">
			{allCategories.map((c) => <p class="bg-primary p-1 px-2 mr-5 rounded-sm">{c}</p>)}
		</div>

		<a class="text-3xl font-bold my-1 hover:underline flex" href={post.url}><h1>{post.frontmatter.title}</h1></a>

		
	</header>
	<p class="my-1">{post.frontmatter.description}</p>
	<a class="hover:underline" href={post.url}>Read more</a>
</article>
